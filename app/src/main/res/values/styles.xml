<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/navigation_drawer_items_text_size</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/progress_bar</item>
    </style>

    <style name="image_variant">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:onClick">onImageClick</item>
        <item name="android:maxHeight">140dp</item>
        <item name="android:maxWidth">140dp</item>
    </style>

    <style name="answer_variant">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">@dimen/answer_variants_text_size</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#9e9e9e</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/light_red</item>
    </style>

    <style name="StatGraphBar" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:textSize">@dimen/statistic_labels_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatGraphBarTextDay" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">@dimen/statistic_labels_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FeedbackSeekBar" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:max">10</item>
        <item name="android:progress">5</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_name_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
